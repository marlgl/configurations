删除行首和行末的空格
awk '{ gsub(/^[ \t]+|[ \t]+$/,""); print }'

cat biz_code | awk '{ sub(/^[ \t]+/,""); print }'
cat biz_code | awk '{ sub(/^[ \t]+|[ \t]+$/,""); print }' > biz_code2
cat biz_code | awk '{ sub(/^[ \t]+/,"\""); print }' > biz_code3
cat biz_code3 | awk '{ sub(/^[ \t]+/,"\":\""); print }' > biz_code4
cat biz_code3 | awk '{ sub(/[ \t]+/,"\":\""); print }' > biz_code4
cat biz_code4 | awk '{ sub(/$[ \t]+/,"\","); print }' > biz_code5
cat biz_code4 | awk '{ sub(/$/,"\","); print }' > biz_code5
cat biz_code5 | awk '{ sub(/[ \t]+/,""); print }' > biz_code6


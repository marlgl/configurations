# Thinkpad suspend button (Fn+F4) 
event=ibm/hotkey HKEY 00000080 00001004
action=/usr/sbin/hibernate-ram

# cat /etc/acpi/events/thinkpad-hibernate
# Thinkpad hibernate button (Fn+F12)                                             
event=ibm/hotkey HKEY 00000080 0000100c
action=/usr/sbin/hibernate

# cat /etc/acpi/bluetooth.sh 
#!/bin/bash
# toggle bluetooth
grep status /proc/acpi/ibm/bluetooth|grep -q enabled
if [ $? == 0 ]; then
  echo disabled > /proc/acpi/ibm/bluetooth
  /etc/init.d/bluetooth stop --quiet
else
  echo enabled > /proc/acpi/ibm/bluetooth
  modprobe rfcomm
  /etc/init.d/bluetooth restart --quiet
fi
# cat events/thinkpad-bluetooth 
# Thinkpad bluetooth button

event=ibm/hotkey HKEY 00000080 00001005
action=/etc/acpi/bluetooth.sh

